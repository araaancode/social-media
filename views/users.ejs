    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
        integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>
        const resultsContainer = document.getElementById('userList');
        let query = document.baseURI.split("?")[1].split("=")[1].replace('+', ' ')
        let userId = localStorage.getItem("userId")

        let postsCount = document.getElementById('posts-count')
        let followersCount = document.getElementById('followers-count')
        let followingsCount = document.getElementById('followings-count')

        let postsCountLocal = localStorage.getItem("postsCount")
        let followersCountLocal = localStorage.getItem("followersCount")
        let followingsCountLocal = localStorage.getItem("followingsCount")



        postsCount.innerText = postsCountLocal
        followersCount.innerText = followersCountLocal
        followingsCount.innerText = followingsCountLocal

        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: `/M00964713/users/search?username=${query}`,
                success: function (response) {
                    if (response.length > 0 && response) {
                        for (let i = 0; i < response.length; i++) {
                            // change buttons text
                            $.ajax({
                                type: "GET",
                                url: `/M00964713/user/${userId}`,
                                success: function (result) {
                                    resultsContainer.innerHTML += `
                                           <div class="card">
                                            <div class="card-body">
                                                                                            <div class="d-md-flex align-items-center mb-4">
                                                                                                <div class="avatar me-3 mb-3 mb-md-0">
                                                                                                    <a href="#!"> <img class="avatar-img rounded-circle"
                                                                                                            src="${response[i].avatar}" alt=""> </a>
                                                                                                </div>
                                                                                                <div class="w-100">
                                                                                                    <div class="d-sm-flex align-items-start">
                                                                                                        <h6 class="mb-0"><a href="#!">${response[i].username} </a></h6>
                                                                                                    </div>
                                                                                                </div>
                                                                                                <div class="ms-md-auto d-flex" style="${response[i].username === result.user.username}">
                                                                                                    <button class="btn btn-primary-soft btn-sm mb-0 follow-btn" id="${response[i]._id}"> ${(result.user.followings && result.user.followings.length > 0) ? (result.user.followings.includes(response[i]._id) ? "Followed" : "Follow") : "Follow"} </button>
                                                                                                </div>
                                                                                            </div>
                                                                                        </div>
                                                                                    </div>
                                                                                    `


                                },
                                error: function (xhr, textStatus, errorThrown) {
                                    console.log(xhr);
                                    console.log(textStatus);
                                    console.log(errorThrown);
                                },
                            });

                        }

                    } else {
                        resultsContainer.innerHTML += "<h3 style='text-align:center;color:#888;'>Search has no result...</h3>"
                    }
                },
                error: function (xhr, textStatus, errorThrown) {
                    console.log(xhr);
                    console.log(textStatus);
                    console.log(errorThrown);
                },
            });
        })

        // Follow User
        document.addEventListener("click", function (e) {
            if (e.target.classList.contains('follow-btn')) {
                let id = e.target.id

                // follow
                $.ajax({
                    type: "POST",
                    url: `/M00964713/follow`,
                    data: {
                        "followerId": userId,
                        "followeeId": id,
                    },
                    success: function (response) {
                        Swal.fire("User Followed...!");

                        setTimeout(() => {
                            location.reload()
                        }, 4000)

                    },
                    error: function (xhr, textStatus, errorThrown) {
                        console.log(xhr);
                        console.log(textStatus);
                        console.log(errorThrown);
                    },
                });
            }

        })



    </script>

    <script>
        $(document).ready(function () {
            $(".logout-btn").click(function (e) {
                e.preventDefault()

                localStorage.removeItem('userId')
                localStorage.removeItem('postsCount')
                localStorage.removeItem('followersCount')
                localStorage.removeItem('followingsCount')

                $.ajax({
                    type: "DELETE",
                    url: '/M00964713/login',
                    success: function (response) {
                        console.log(response);

                    }
                });

                location.reload('/M00964713')
            });
        });

        // avatar
        let avatarUrl = localStorage.getItem("avatar")
        let allAvatars = document.querySelectorAll('.avatar-img')

        allAvatars.forEach(element => {
            element.src = avatarUrl
        });

    </script>
