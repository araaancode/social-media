                <button class="btn bg-transparent px-2 py-0 position-absolute top-50 start-0 translate-middle-y"
                  type="submit"><i class="bi bi-search fs-5"> </i></button>
              </form>
            </div>

            <div class="nav-item w-100 mx-4">
              <form class="rounded position-relative" method="GET" action="/M00964713/contents">
                <input class="form-control ps-5 bg-light" type="search" name="title" id="title"
